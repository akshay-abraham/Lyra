rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isUser(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // User profiles
    match /users/{userId} {
      allow get: if isUser(userId);
      allow list: if false;
      allow create: if isUser(userId) && request.resource.data.uid == userId;
      allow update: if isUser(userId) && resource.data.uid == userId;
      allow delete: if isUser(userId);

      // Chat sessions - LIBERAL ACCESS
      match /chatSessions/{sessionId} {
        allow read, write: if isUser(userId);

        // Messages in chat sessions - LIBERAL ACCESS
        match /messages/{messageId} {
          allow read, write: if isUser(userId);
        }
      }

      // Teacher prompts
      match /prompts/{promptId} {
        allow get: if isUser(userId);
        allow list: if isUser(userId);
        allow create: if isUser(userId) && request.resource.data.userId == userId;
        allow update: if isUser(userId) && resource.data.userId == userId;
        allow delete: if isUser(userId);
      }
    }

    // Teacher settings - PUBLIC READ, OWNER WRITE
    match /teacherSettings/{settingsId} {
      allow get, list: if true;
      allow create: if isSignedIn() && request.resource.data.teacherId == request.auth.uid;
      allow update: if isSignedIn() && resource.data.teacherId == request.auth.uid;
      allow delete: if isSignedIn() && resource.data.teacherId == request.auth.uid;
    }
  }
}